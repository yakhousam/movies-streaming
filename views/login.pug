extends ./layout/general-layout/layout.pug
block container
  main.main-container
    a(name="sect-hd")
    .form-container
      .social-login
        a.btn-social-login(href="/auth/github") #[img(src="/static/images/github.png" width="40px")] Login with github
        a.btn-social-login(href="/auth/twitter") #[img(src="/static/images/twitter.png" width="40px")] Login with twitter
        a.btn-social-login(href="/auth/google") #[img(src="/static/images/google.png" width="40px")] Login with google
      form.local-login(action="/login", method="post")
        h1 Login
        if error.length
          p= error
        input#username(type="text", name="username" placeholder="User name" )
        input#password(type="password", name="password", placeholder="Password")
        input.btn-social-login(type="submit", value="Login")